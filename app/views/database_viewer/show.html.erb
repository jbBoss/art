<h1>Table: <%= @table_name.titleize %></h1>

<% if @rows.any? %>
  <table border="1">
    <thead>
      <tr>
        <% @columns.each do |col| %>
          <th><%= col %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @rows.each do |row| %>
        <tr>
          <% @columns.each do |col| %>
            <td><%= row[col] %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No data available in this table.</p>
<% end %>

<p><%= link_to 'Back to Tables', database_viewer_path %></p>
